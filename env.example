# =================================
# TELEGRAM BOT CONFIGURATION
# =================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# =================================
# GIGACHAT CONFIGURATION
# =================================
# Получите credentials на https://developers.sber.ru/portal/products/gigachat
GIGACHAT_CLIENT_ID=ваш_client_id
GIGACHAT_CLIENT_SECRET=ваш_client_secret
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# =================================
# SPEECH-TO-TEXT CONFIGURATION
# =================================
# Провайдер для распознавания речи: 'whisper' (локальный, по умолчанию) или 'yandex'
# Whisper работает полностью локально, без интернета
# Требует: pip install openai-whisper и установленный ffmpeg
STT_PROVIDER=whisper

# Вариант 1: Локальный Whisper (полностью бесплатно, рекомендуется)
# Установите: pip install openai-whisper
# Требует ~1.5GB места для модели base (скачивается автоматически при первом запуске)
# Требует ffmpeg:
#   Windows: https://ffmpeg.org/download.html
#   Linux: sudo apt-get install ffmpeg
#   macOS: brew install ffmpeg
# Модель Whisper: 'tiny' (быстро, ~39MB), 'base' (~150MB), 
#                  'small' (по умолчанию, ~500MB), 'medium' (~1.5GB), 'large' (~3GB)
# Чем больше модель, тем лучше качество распознавания, но медленнее работа
WHISPER_MODEL=small

# Вариант 2: Яндекс SpeechKit (может быть бесплатным на тарифе)
# Для Яндекс SpeechKit: https://cloud.yandex.ru/docs/speechkit/
# Если используете Yandex, установите STT_PROVIDER=yandex и заполните ключи ниже
STT_API_KEY=
STT_FOLDER_ID=

# =================================
# GOOGLE CALENDAR CONFIGURATION
# =================================
# Путь к JSON-файлу Service Account (см. инструкцию в PRD.md)
GOOGLE_CREDENTIALS_FILE=service-account.json
# ID календаря (по умолчанию primary - основной календарь)
GOOGLE_CALENDAR_ID=primary

# =================================
# GENERAL SETTINGS
# =================================
# Временная зона (список: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TIMEZONE=Europe/Moscow

# За сколько минут до события отправлять напоминание
REMINDER_MINUTES_BEFORE=15

# Интервал проверки напоминаний в секундах (рекомендуется 60)
REMINDER_CHECK_INTERVAL=60

# Путь к файлу базы данных SQLite
# Используется для событий календаря и дневника питания
DATABASE_FILE=events.db

# Директория для временных файлов (голосовые сообщения, экспорт CSV)
TEMP_DIR=temp

